<h1>Welcome</h1>

<% if logged_in? %>

	<h1>You are signed in as <%= current_user.username %></h1>
	<%= button_to 'Rust Backend', new_user_query_path(current_user), method: :get %>
	<%= button_to 'History', user_queries_path(current_user), method: :get %>
	<%= button_to 'Sign Out', '/logout', method: :get%>

<% else %>

	<%= button_to 'Login', '/login', method: :get %>
	<%= button_to 'Sign Up', '/users/new', method: :get %>

<% end %>

